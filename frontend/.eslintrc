{
  "extends": ["airbnb", "prettier", "plugin:jest/recommended", "plugin:import/errors", "plugin:import/warnings"],
  "plugins": ["import", "jest"],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "__DEV__": true,
    "FILES_API_HOST": true,
    "SOCKET_HOST": true,
    "VERSION": true,
    "COMMIT": true,
    "EXPORTER_GROUP": true,
    "OC_GROUP": true,
    "EXPORTER_MODE": true
  },
  "parser": "babel-eslint",
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  },
  "settings": {
   "import/resolver": {
      "webpack": {
        "config": "webpack.common.js"
      }
    }
  }
}
